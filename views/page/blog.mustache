
<div class="container">
  <div class="main">

    <div class="page-header">
      <h1>{{page.title}}</h1>
    </div>

    {{{page.body}}}

  </div>
</div>

<br /><br />

<div class="container">
  <div class="row">
    <div class="posts span12">
      {{#posts}}
          <div class="post">
            <h2>
              <a href="{{url}}">{{title}}</a>
            </h2>
            {{{body}}}
            <hr />
            <div>
              <small>
              Posted on: {{dateCreated}}
              </small>
            </div>
          </div>
      {{/posts}}
      {{{pagination}}}
    </div>

    <!--
