<div class="container">
  <div class="main">
    <div class="page-header" style="margin-bottom:0">
      <h1>{{page.title}}</h1>
    </div>
    {{{page.body}}}
  </div>
</div>
<br/><br/>

<div class="container">
  <div class="row-fluid">
    <div class="posts span8">
      {{#posts}}
        <div class="post">
          <h2>
            <a href="{{url}}">{{title}}</a>
          </h2>
          <div class="body">
            {{{body}}}
            <hr />
          </div>
          <div>
            <small>
            Posted on: {{date}}
            </small>
            <small style="float:right">
              <a href="{{url}}#disqus_thread"></a>
            </small>
          </div>
        </div>
      {{/posts}}
      {{{pagination}}}
    </div>
    <div class="span4">
      <div class="well" style="padding:8px 0">
        <!--
          <div class="btn-group" data-toggle="buttons-radio">
            <button class="btn active" id="posts-expand">Expanded</button>
            <button class="btn" id="posts-collapse">Collapsed</button>
          </div>
        -->
        <ul class="nav nav-list">
          <li class="nav-header">
            Tags
          </li>
          <li><a href="#">Test</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>