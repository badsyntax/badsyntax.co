{{{breadcrumbs}}} 
<div class="container">
  <div class="entry">
    <div class="page-header">
      <h1>{{page.title}}</h1>
    </div>
    {{{page.body}}}
    <hr />
    <footer>
      <section>
        {{page.date}}
        <span style="float:right">
          <a href="{{url}}#disqus_thread"></a>
        </span>
      </section>
      <section>
        Tagged:
        {{#page.tagModels}}
          <a href="/blog/tag/{{name}}">{{name}}</a>
        {{/page.tagModels}}
      </section>
    </footer>
  </div>
  <div class="entry" style="padding-bottom:12px">
    <div id="disqus_thread">
      <big>
        <button class="btn btn-large" id="view-comments">
          <i class="icon-comment"></i>
          View comments
        </button>
      </big>
    </div>
  </div>  
</div>