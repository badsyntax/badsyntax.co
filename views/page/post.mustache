{{{breadcrumbs}}} 
<div class="container entry">
  <div class="main">
    <div class="page-header">
      <h1>{{page.title}}</h1>
    </div>
    <p>{{page.date}}</p>
    {{{page.body}}}
    
    <hr />

    <footer>
      <section>
        {{page.date}}
        <span style="float:right">
          <a href="{{url}}#disqus_thread"></a>
        </span>
      </section>
      <section>
        Tagged:
        {{#tagModels}}
          <a href="/blog/tag/{{name}}">{{name}}</a>
        {{/tagModels}}
      </section>
    </footer>
  </div>
</div>
<div class="container entry post-comments">
  <div class="main" style="padding-bottom:10px">
    <div id="disqus_thread">
      <big>
        <a href="#" id="view-comments">
          <i class="icon-plus"></i>
          View comments
        </a>
      </big>
    </div>
  </div>
</div>