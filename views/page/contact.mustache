<div class="container entry">
  <div class="main">

    <div class="page-header">
      <h1>{{page.title}}</h1>
    </div>

    {{{page.body}}}

    <div class="row">
      <div class="span5">
        {{#message}}
        <div class="alert alert-{{type}}">
          <button class="close" data-dismiss="alert">Ã—</button>
          <strong>{{friendlytype}}</strong> {{content}}
        </div>
        {{/message}}
    
        <form class="form-vertical" method="post" action="/contact">
          <fieldset>
            {{#errors}}
              {{#errors.name}}<div class="control-group error">{{/errors.name}}
              {{^errors.name}}<div class="control-group">{{/errors.name}}
            {{/errors}}
            {{^errors}}<div class="control-group">{{/errors}}
              <label class="control-label" for="name">Name {{errors.name}}</label>
              <div class="controls">
                <input type="text" class="input-xlarge" id="name" name="name" value="{{data.name}}">
              </div>
            </div>
            {{#errors}}
              {{#errors.email}}<div class="control-group error">{{/errors.email}}
              {{^errors.email}}<div class="control-group">{{/errors.email}}
            {{/errors}}
            {{^errors}}<div class="control-group">{{/errors}}
              <label class="control-label" for="email">Email {{errors.email}}</label>
              <div class="controls">
                <input type="text" class="input-xlarge" id="email" name="email" value="{{data.email}}">
              </div>
            </div>
            {{#errors}}
              {{#errors.message}}<div class="control-group error">{{/errors.message}}
              {{^errors.message}}<div class="control-group">{{/errors.message}}
            {{/errors}}
            {{^errors}}<div class="control-group">{{/errors}}
              <label class="control-label" for="message">Message {{errors.message}}</label>
              <div class="controls">
                <textarea class="input-xlarge" id="message" rows="7" name="message">{{data.message}}</textarea>
              </div>
            </div>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Send message</button>
            </div>
          </fieldset>
        </form>
      </div>
